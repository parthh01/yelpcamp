<% include ../partials/header %> 

<div class = "container">
	<div class = "row">
		<div class = "col-md-3">
			<p class = "lead"> Yelp Camp</p>
			<div class = "list-group">
				<li class = "list-group-item active"> Info 1</li>
				<li class = "list-group-item"> Info 2</li>
				<li class = "list-group-item"> Info 3</li>
			</div>
		</div>
		<div class = "col-md-9">
			<div class = "thumbnail">
				<img class = "img-responsive" src="<%=ground.image%>">
				<div class = "caption">
					<h4 class = "pull-right">$9.00/night</h4>
					<h4><a href=""><%= ground.name %></a></h4>
					<p><%= ground.description %></p>
				</div>
			</div>
			<div class = "well">
				<div class = "text-right">
					<a href="/campgrounds/<%=ground._id%>/comments/new" class = "btn btn-success ">Add Comment</a>
				</div>
				<hr>
				<% ground.comments.forEach(function(comment){ %> 
				<div class = "row">
					<div class = "col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class = "pull-right"> X Days Ago</span>
						 <p><%= comment.text%></p> 
					</div>
				</div>
				<% }) %> 
			</div>
		</div>
	</div>
</div>

	<div class = "container">
	<div class = "row">
		<h2>Add New Comment: </h2>
		<form action = "/campgrounds/<%=ground._id%>/comments" method = "POST" style="width: 30%">
			<div class = "form-group">
				<input class = "form-control" type="text" name="comment[text]" placeholder = "comment">
			</div>
			<div class = "form-group">
				<button class = "btn btn-lg btn-primary" type = "submit" class = "btn btn-dark">Add Comment</button>
			</div>
		</form>
	</div>
<a href="/campgrounds/<%=ground._id%>">Go back</a>
</div>




<% include ../partials/footer %> 