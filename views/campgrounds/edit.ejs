<% include ../partials/header %> 

<div class = "container">
	<div class = "row">
		<h2>Edit <%= ground.name %> Here  </h2>
		<form action = "/campgrounds/<%=ground._id%>/?_method=PUT" method = "POST" style="width: 30%">
			<div class = "form-group">
				<input class = "form-control" type="text" name="name" placeholder = "campsite" value = "<%= ground.name %> ">
			</div>
			<div class = "form-group">
				<input class = "form-control" type="number" name="price" placeholder = "price"  value = "<%= ground.price %> " min = "0.01" step = "0.01">
			</div>
			<div class = "form-group">
				<input class = "form-control" type="url" name="imageurl" placeholder = "image url" value = "<%= ground.image %> ">
			</div>
			<div class = "form-group">
				<textarea class = "form-control" type="text" name="description" placeholder = "Enter Description Here" ><%= ground.description %></textarea>
			</div>
			<div class = "form-group">
				<button class = "btn btn-lg btn-primary" type = "submit" class = "btn btn-dark">Update Campground</button>
			</div>
		</form>
	</div>
<a href="/campgrounds">Back to Campgrounds</a>
</div>
<% include ../partials/footer %>